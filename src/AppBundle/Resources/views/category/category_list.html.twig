{% extends 'AppBundle::layout.html.twig' %}
{% block title %} КАТЕГОРИИ {% endblock %}
{% block stylesheets %}
    {{  parent() }}
    <link href='{{ asset('bundles/app/css/template/style.css') }}' rel='stylesheet' type='text/css'>
{% endblock %}

{% block main %}



    <main>



        <!-- blog main wrapper start -->
        <div class="blog-main-wrapper pt-100 pb-100 pt-sm-58 pb-sm-58">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="blog-wrapper">
                            <div class="row">
                                {% set parent = 0 %}
                                {% for id,category in cateArrays %}
                                    {% set catId = category['id'] %}
                                    {% if category['parent_id'] == parent %}
                                        <div class="col-lg-6">
                                            <a href="{{ path('oneCategory',{'id':catId}) }}">
                                                <div class="blog-item-single">
                                                    <article class="blog-post">
                                                        <div class="blog-post-content">

                                                                <div class="blog-top">
                                                                    <div class="post-date-time">
                                                                        <span>{{ category.name }}</span>
                                                                    </div>
                                                                    <div class="post-blog-meta">
                                                                        {#<p>post by <a href="#">HasTech</a></p>#}
                                                                    </div>
                                                                </div>

                                                            <div class="blog-thumb img-full">

                                                            </div>
                                                        </div>
                                                        <div class="blog-content">
                                                            {#<h4><a href="blog-details.html">This is image Post For XipBlog</a></h4>#}

                                                        </div>
                                                    </article>
                                                </div>
                                            </a>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- blog main wrapper end -->
    </main>
{% endblock %}
