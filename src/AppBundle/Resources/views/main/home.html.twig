{% extends 'AppBundle::layout.html.twig' %}
{% block title %}Главная страница {% endblock %}


{% block main %}
    <!-- slider area start -->

    <div class="hero-area">
        <div class="hero-slider-active slider-arrow-style slick-dot-style hero-dot">
            {% for homeSilder in homeSilders %}
                <div class="hero-single-slide hero-1 d-flex align-items-center" style="background-image: url({% path homeSilder.image,'reference' %});">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="slider-content">
                                    <h1>{{ homeSilder.name }}</h1>
                                    <h3>{{ homeSilder.description }}</h3>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>




    <!-- featured product area start -->
    <div class="page-section pt-100 pb-50 pt-md-92 pt-sm-56 pb-sm-10">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center pb-44">
                        <p>Последние популярные продукты</p>
                        <h2>Продукты</h2>
                    </div>
                </div>
            </div>
            <div class="row product-carousel-one spt slick-arrow-style" data-row="2">

                {% for rendProduct in rendProducts %}
                    <div class="col">
                        <div class="product-item mb-20">
                            <div class="product-thumb">
                                <a href="{{ path('product_inner',{'id' : rendProduct.id}) }}">
                                   

                                    <img style="height:412px " src="{% path rendProduct.image,'list' %}" alt="product image">
                                </a>

                                <div class="product-action-link">

                                    <a
                                        href="#"
                                        data-toggle="modal"
                                        data-target="#quick_view_product"
                                        class="product_modal_view"
                                        data-id="{{ rendProduct.id }}"
                                        data-image = "{% if rendProduct.image is defined %}{% path rendProduct.image,'list' %}{% endif %}"

                                    >
                                        <span data-toggle="tooltip" data-placement="left" title="">
                                                <i class="ion-ios-eye-outline"></i>
                                        </span>
                                    </a>

                                </div>
                            </div>
                            <div class="product-description text-center">
                                <div class="manufacturer">
                                    <p class="rend_product_name">
                                        <a href="{{ path('product_inner',{'id' : rendProduct.id}) }}">
                                            {{ rendProduct.name }}
                                        </a>
                                    </p>
                                </div>
                                {#<div class="product-name">#}
                                    {#<h3><a href="product-details.html">Endeavor Daytrip</a></h3>#}
                                {#</div>#}
                                <div class="price-box">
                                    {% if rendProduct.rebate != null  %}
                                        <span class="regular-price"> {{ rendProduct.rebate }}</span>

                                        <span class="old-price">
                                            <del>
                                                {{ rendProduct.price }}

                                            </del>
                                        </span>
                                    {% else %}
                                        <span class="regular-price">  {{ rendProduct.price }}</span>

                                        <span class="old-price">
                                            <del>
                                               {{ rendProduct.rebate }}

                                            </del>
                                        </span>
                                    {% endif %}
                                </div>
                                <div class="product-btn">
                                    <a data-id="{{ rendProduct.id }}" class="add_basket" href="#"><i class="ion-bag"></i>Добавить корзину</a>
                                </div>

                            </div>
                        </div>
                    </div>




                {% endfor %}
            </div>
        </div>
    </div>
    <!-- featured product area end -->

    <div class="banner-statistic-two">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-content-inner overlay banner-3">
                        <div class="banner-content banner-content__3 text-center">

                            <h2>Строй маг</h2>
                            <p>сэкономьте свое время</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- latest blog area start -->
    <div class="latest-blog-area pt-100 pb-90 pt-sm-58 pb-sm-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center pb-44">

                        <h2>категории</h2>
                    </div>
                </div>
            </div>
            <div class="blog-carousel-active row slick-arrow-style">
                {% for cat in categorys %}
                    <div class="col">
                        <div class="blog-item white-text">
                            <article class="blog-post">
                                <div class="blog-post-content">
                                    <div class="blog-top">
                                        <div class="post-date-time">
                                            <a href="{{ path('product_list',{'id' : cat.id}) }}">
                                                <span>{{ cat.name }} </span>
                                            </a>

                                        </div>
                                        <div class="post-blog-meta">

                                        </div>
                                    </div>

                                </div>
                                <div class="blog-content">

                                </div>
                            </article>
                        </div>
                    </div>
                {% endfor %}



            </div>
        </div>
    </div>






    <div class="modal" id="quick_view_product">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <!-- product details inner end -->
                    <div class="product-details-inner">
                        <div class="row">
                            <div class="col-lg-5 col-md-5">
                                <div class="product-large-slider mb-20 slider-arrow-style slider-arrow-style__style-2 large_silder_product">
                                    <div class="pro-large-img">
                                        {#<img  src="/bundles/app/images/product/product-details-img1.jpg" alt="" />#}
                                    </div>
                                    {#<div class="pro-large-img">#}
                                        {#<img src="/bundles/app/images//product/product-details-img2.jpg" alt=""/>#}
                                    {#</div>#}
                                    {#<div class="pro-large-img">#}
                                        {#<img src="/bundles/app/images/product/product-details-img3.jpg" alt=""/>#}
                                    {#</div>#}
                                    {#<div class="pro-large-img">#}
                                        {#<img src="/bundles/app/images/product/product-details-img4.jpg" alt=""/>#}
                                    {#</div>#}
                                    {#<div class="pro-large-img">#}
                                        {#<img src="/bundles/app/images/product/product-details-img4.jpg" alt=""/>#}
                                    {#</div>#}
                                </div>
                                <div class="pro-nav slick-padding2 slider-arrow-style slider-arrow-style__style-2 small_silder_product">
                                    {#<div class="pro-nav-thumb"><img src="/bundles/app/images/product/product-details-img1.jpg" alt="" /></div>#}
                                    {#<div class="pro-nav-thumb"><img src="/bundles/app/images/product/product-details-img2.jpg" alt="" /></div>#}
                                    {#<div class="pro-nav-thumb"><img src="/bundles/app/images/product/product-details-img3.jpg" alt="" /></div>#}
                                    {#<div class="pro-nav-thumb"><img src="/bundles/app/images/product/product-details-img4.jpg" alt="" /></div>#}
                                    {#<div class="pro-nav-thumb"><img src="/bundles/app/images/product/product-details-img5.jpg" alt="" /></div>#}
                                </div>
                            </div>
                            <div class="col-lg-7 col-md-7">
                                <div class="product-details-des pt-sm-30 ">
                                    <h3 class="product_modal_title">

                                    </h3>

                                    <div class="pricebox">
                                        <span class="regular-price product_modal_price">

                                        </span>
                                    </div>
                                    <p class="product_modal_desc">
                                    </p>
                                    <div class="quantity-cart-box d-flex align-items-center mb-24">

                                        {#<div class="product-btn product-btn__color">#}
                                            {#<a href="#"><i class="ion-bag"></i>Добавить корзину</a>#}
                                        {#</div>#}
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- product details inner end -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}