{% extends 'AppBundle::layout.html.twig' %}
{% block title %}{% endblock %}


{% block main %}
  
    <main>
        <!-- blog main wrapper start -->
        <div class="blog-main-wrapper pt-100 pb-100 pt-sm-58 pb-sm-58">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="blog-wrapper">
                            <div class="row">

                                {% if products or catSearch  %}
                                    {% for product in products %}
                                        <div class="col-xl-4 col-lg-6 col-md-6">
                                            <div class="blog-item-single">
                                                <article class="blog-post">
                                                    <div class="blog-post-content">
                                                        <div class="blog-top" style="border-left: 6px solid #fff;">

                                                            <div class="post-blog-meta">
                                                                <p>
                                                                    <a href="{{ path('product_inner',{'id' : product.id}) }}">
                                                                        {{ product.name }}
                                                                    </a>
                                                                </p>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="blog-thumb img-full">
                                                        <a href="{{ path('product_inner',{'id' : product.id}) }}">
                                                            <img src="{% path product.image,'list' %}" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="blog-content">

                                                        <p>
                                                            {{ product.description }}
                                                        </p>

                                                    </div>

                                                </article>
                                            </div>
                                        </div>

                                    {% endfor %}


                                    {% for cat in catSearch %}

                                        <div class="col-xl-4 col-lg-6 col-md-6">
                                            <div class="blog-item-single">
                                                <article class="blog-post">
                                                    <div class="blog-post-content">
                                                        <div class="blog-top" style="border-left: 6px solid #fff;">

                                                            <div class="post-blog-meta">
                                                                <p>
                                                                    <a href="{{ path('product_list',{'id' : cat.id}) }}">
                                                                        {{ cat.name }}
                                                                    </a>
                                                                </p>
                                                            </div>
                                                        </div>

                                                    </div>



                                                </article>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <div style="width: 100%" class="error"> По вашему запросу ничего не найдено</div>
                                {% endif %}

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- blog main wrapper end -->
    </main>
{% endblock %}